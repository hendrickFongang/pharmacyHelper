<%- include('header'); -%>
<div class="row" style="text-align:center">
  <h1> <%= pharmacyName %> pharmacy <br> <p style="color: blue"> <%= drugName %> </p> </h1> <br>

</div>
<div class="div-table">
  <table class="table table-hover table-dark table1">
    <thead>
      <tr>
        <th scope="col" style="color: yellow">#</th>
        <th scope="col" style="color: yellow"> <b> Drug's type  </b> </th>
        <th scope="col" style="color: yellow"> <b>  Quantity </b> </th>
        <th scope="col" style="color: yellow"> <b>  Price </b> </th>

      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i< results.length; i++) { %>
        <tr>
          <th scope="row">  <%= i +1 %> </th>
          <td> <p style = "text-transform:capitalize;"><%= results[i].typeOfDrug %>  </p> </td>
          <td> <p style = "text-transform:capitalize;"><%= results[i].quantity %>  </p> </td>
          <td> <p style = "text-transform:capitalize;"><%= results[i].price %>  </p> </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
